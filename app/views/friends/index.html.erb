<% if user_signed_in? %>
  <table class="table table-hover mb-3">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th>Created At</th>
        <th>Updated At</th>
        <th> </th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>
          <% if friend.user == current_user %>
            <%= render friend %>
          <% end %>
        <% end %>
    </tbody>
  </table>

  <%= link_to "New friend", new_friend_path, class: "btn btn-secondary" %>
<% else %>
  <h1>I am not a Ruby friend, yet.</h1>
  <p>But neither your</p>
<% end %>